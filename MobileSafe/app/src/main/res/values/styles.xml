<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppCompat.Light.NoActionBar." parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--所有界面的标题样式-->
    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#429ED6</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <!--使用系统的样式，但是去掉title标题-->
        <item name="android:windowNoTitle">true</item>
        <!--指定对话框白色背景-->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationStyle</item>
    </style>

    <!--为对话框弹出的动画提供一个style-->
    <style name="DialogAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!--popupwindow弹出的动画提供一个style-->
    <style name="PopupAnimationSytle">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

</resources>
